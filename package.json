{
  "name": "youtube-downloader-electron",
  "version": "3.0.0",
  "description": "YouTube Downloader - Electron + React Edition",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "start": "webpack serve --mode development --open",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "dev": "npm run electron:dev",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "clean": "rimraf dist release",
    "rebuild": "npm run clean && npm run build"
  },
  "build": {
    "appId": "com.youtube-downloader.electron",
    "productName": "YouTube Downloader",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "bin/",
        "to": "bin/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png",
      "sign": null,
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "youtube",
    "downloader",
    "electron",
    "react"
  ],
  "author": "YouTube Downloader Team",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^27.1.3",
    "electron-builder": "^24.8.1",
    "html-webpack-plugin": "^5.6.0",
    "rimraf": "^6.1.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.2",
    "@mui/material": "^5.15.2",
    "framer-motion": "^10.16.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
